          <link rel="stylesheet" type="text/css" href="{{asset('assets/css/bootstrap.cosmo.min.css')}}">
		  <link rel="stylesheet" type="text/css" href="{{asset('assets/css/styles.css')}}">

		{% endblock %}

		{% block javaScripts %}
          {# incluir estilos javaScripts  #}

       <script type="text/javascript">
       var URL ="{{app.request.getSchemeAndHttpHost()}}/UDEMY_/php_ude/web";
       
       </script>

          	    
          <script src="{{asset('assets/js/jquery.min.js')}}"></script>	
          <script src="{{asset('assets/js/bootstrap.min.js')}}"></script>			    
		{% endblock %}
</head>
<body>
	<header>
		<!-- <h1>Caminos Rurales</h1> -->
		<nav class="navbar navbar-inverse">
			<div class="container-fluid">	
			<div  class="navbar-header">
				
				<button type="button" class="navbar-toggle collapse" data-toggle="collapse" data-target="bs-example-navbar-collapse-1" aria-expanded="false" >
					<span class="sr-only">	NAVEGACION</span>
					<span class="icon-bar">	</span>
					<span class="icon-bar">	</span>
					<span class="icon-bar">	</span>
				</button>
				<a href="{{path('backend_homepage')}}" class="navbar-brand">
					<span class="glyphicon glyphicon-cloud" aria-hidden='true'>	</span>
					CAMINOS RURALES
				</a>
			</div>
			<div class="collapse navbar-collapse"   id="bs-example-navbar-collapse-1" >

				{% if  app.user == null  %}
				<ul class="nav navbar-nav">	
					<li>	
						<a href="{{path('login')}}"><span class="glyphicon glyphicon-log-in" aria-hidden='true'>	</span> &nbsp; Entrar 		
						</a> 
					</li>

					<li>	
						<a href="{{path('register')}}"><span class="glyphicon glyphicon-user" aria-hidden='true'>	</span> &nbsp; Registro 
						</a> 
					</li>
					
				</ul>
                 {% endif %}
                

                   {% if  is_granted('ROLE_USER_MAGYP') %}

      				<ul class="nav navbar-nav navbar-right">	
					<li class="dropdown" >	
						<a  class="dropdown-toggle" data-toggle="dropdown" role ="button" aria-haspopup='true' aria-expanded='false'>
						{{app.user}} 
						<span class="caret">	</span>
						</a> 

						<ul class="dropdown-menu">	


                            <li>	<a href=""> <span class="glyphicon glyphicon-cog" aria-hidden="true">	</span>&nbsp;Mis Datos</a> </li>

							
							<li>	<a href="">
								<span class="glyphicon glyphicon-user" aria-hidden="true">	</span>&nbsp; Mis perfil </a></li>
							<li	role="separator" class="divider"></li>

                            <li>	<a href=""> <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true">	</span>&nbsp;Ayuda</a> </li>

							<li>	<a href="{{path('logout')}}"> <span class="glyphicon glyphicon-log-out" aria-hidden="true">	</span>&nbsp;Salir</a> </li>


							


							</ul>
					</li>

					
				</ul> 



   					{% endif %} 
              
                {% if  is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
				{% if  app.user != null  %}
                   <ul class="nav navbar-nav navbar-right">	
					<li class="dropdown" >	
						<a  class="dropdown-toggle" data-toggle="dropdown" role ="button" aria-haspopup='true' aria-expanded='false'>
						{{app.user.name}} {{app.user.surname}} 
						<span class="caret">	</span>
						</a> 

						<ul class="dropdown-menu">	


                            <li>	<a href=""> <span class="glyphicon glyphicon-cog" aria-hidden="true">	</span>&nbsp;Mis Datos</a> </li>

							
							<li>	<a href="">
								<span class="glyphicon glyphicon-user" aria-hidden="true">	</span>&nbsp; Mis perfil </a></li>
							<li	role="separator" class="divider"></li>

                            <li>	<a href=""> <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true">	</span>&nbsp;Ayuda</a> </li>

							<li>	<a href="{{path('logout')}}"> <span class="glyphicon glyphicon-log-out" aria-hidden="true">	</span>&nbsp;Salir</a> </li>


							


							</ul>
					</li>

					
				</ul> 
				 {% endif %}
				{% endif %}
			</div>

			</div>
		</nav>
	</header>

	<section id="content">

	
	<div class="container">	
			

			{% for flash_message in app.session.flashBag.get('status') %}
				<div class="col-lg-11">	


    				<div class="alert alert-success">
       						 {{ flash_message }}
    				</div>

    			</div>
{% endfor %}
	</div>
	

		<div class="clearfix">	</div>
		{% block content %}
		    Contenido por Caminos Rurales
		{% endblock %}
	</section>


	<footer class="col-lg-12">
		<hr>
		<div class="container">
			<p class="text-muted">Autor y Creador Gustavo Chiappe</p>
		</div>
	</footer>
</body>
</html>